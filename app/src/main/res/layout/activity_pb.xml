<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chenley.an.yutownhelper.Activity.PbAct">
    <!--        style="?android:attr/progressBarStyleHorizontal"-->
    <!--        style="?android:attr/progressBarStyleHorizontal"-->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/cusHorizontalPbpressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="91dp"
        android:max="100"
        android:progress="50" />

    <Button
        android:id="@+id/btn_aa"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/circleyellow" />


    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_dashlinelayer" />

    <Button
        android:id="@+id/btn_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="点击复制abc" />

    <EditText
        android:id="@+id/tv_copydata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_copy"
        android:layout_alignRight="@+id/btn_copy"
        android:layout_below="@+id/progressBar"
        android:layout_marginTop="32dp"
        android:text="粘贴后数据：" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/rcpb_normal"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_alignLeft="@+id/ircpb_with_icon"
        android:layout_alignStart="@+id/ircpb_with_icon"
        android:layout_below="@+id/ircpb_with_icon"
        android:layout_marginTop="12dp"
        app:rcBackgroundColor="#FFFFFF"
        app:rcMax="500"
        app:rcProgress="200"
        app:rcProgressColor="#FFD100"
        app:rcRadius="13dp"
        app:rcReverse="false"
 />

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/ircpb_with_icon"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/btn_copy"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/view"
        android:layout_toRightOf="@+id/view"
        app:rcBackgroundColor="#8a9e63"
        app:rcBackgroundPadding="4dp"
        app:rcIconPadding="2dp"
        app:rcIconSize="16dp"
        app:rcIconSrc="@drawable/coin_icon"
        app:rcMax="55"
        app:rcProgress="22"
        app:rcProgressColor="#87b67436"
        app:rcRadius="22dp"
        app:rcReverse="false"
        app:rcSecondaryProgress="33"
        app:rcSecondaryProgressColor="#488dac" />
    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/ircpb_with_icon2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/rcpb_normal"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/view"
        android:layout_toRightOf="@+id/view"
        app:rcBackgroundColor="#8a9e63"
        app:rcBackgroundPadding="4dp"
        app:rcIconPadding="2dp"
        app:rcIconSize="16dp"
        app:rcIconSrc="@drawable/coin_icon"
        app:rcMax="66"
        app:rcProgress="44"
        app:rcProgressColor="#ff00ee"
        app:rcRadius="22dp"
        app:rcReverse="true"
        app:rcSecondaryProgress="33"
        app:rcSecondaryProgressColor="#51ff00" />
</RelativeLayout>
