<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chenley.an.yutownhelper.activity.ActionBarApiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sss" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="不设置android:scaleType属性"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#72dbbc"
            android:src="@drawable/forest" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CENTER /center  按图片的原来size居中显示，当图片长/宽超过View的长/宽，则截取图片的居中部分显示"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="222dp"
            android:layout_height="444dp"
            android:background="#db9972"
            android:scaleType="center"
            android:src="@drawable/forest" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CENTER_CROP / centerCrop  按比例扩大图片的size居中显示，使得图片长(宽)等于或大于View的长(宽)"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="222dp"
            android:layout_height="444dp"
            android:background="#db9972"
            android:scaleType="centerCrop"
            android:src="@drawable/forest" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CENTER_INSIDE / centerInside  将图片的内容完整居中显示，通过按比例缩小或原来的size使得图片长/宽等于或小于View的长/宽"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="222dp"
            android:layout_height="444dp"
            android:background="#72dbbc"
            android:scaleType="centerInside"
            android:src="@drawable/forest" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FIT_CENTER / fitCenter  把图片按比例扩大/缩小到View的宽度，居中显示"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="222dp"
            android:layout_height="444dp"
            android:background="#db9972"
            android:scaleType="fitCenter"
            android:src="@drawable/forest" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FIT_END / fitEnd   把图片按比例扩大/缩小到View的宽度，显示在View的下部分位置"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="222dp"
            android:layout_height="444dp"
            android:background="#72dbbc"
            android:scaleType="fitEnd"
            android:src="@drawable/forest" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FIT_START / fitStart  把图片按比例扩大/缩小到View的宽度，显示在View的上部分位置"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="222dp"
            android:layout_height="444dp"
            android:background="#db9972"
            android:scaleType="fitStart"
            android:src="@drawable/forest" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FIT_XY / fitXY  把图片不按比例扩大/缩小到View的大小显示"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="222dp"
            android:layout_height="444dp"
            android:background="#72dbbc"
            android:scaleType="fitXY"
            android:src="@drawable/forest" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MATRIX / matrix 用矩阵来绘制，动态缩小放大图片来显示。"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="222dp"
            android:layout_height="444dp"
            android:background="#db9972"
            android:scaleType="matrix"
            android:src="@drawable/forest" />
    </LinearLayout>
</ScrollView>
